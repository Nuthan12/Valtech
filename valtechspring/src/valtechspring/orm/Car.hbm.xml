<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    
    <hibernate-mapping package="valtechspring.orm">
    <class name="Car">
    <id name="id">
    	<!--<generator class="assigned"></generator> Assigned Means User will provide Primary Key -->
    	<!-- <generator class="increment"/> --><!--  Hibernate will select max(id)+1  -->
    	<generator class="sequence"></generator>
    </id>
    <property name="make"/>
    <property name="model"/>
    <property name="yearManufactured"/>
    <property name="price"/>
    <property name="colour"/>
    </class>
    </hibernate-mapping>