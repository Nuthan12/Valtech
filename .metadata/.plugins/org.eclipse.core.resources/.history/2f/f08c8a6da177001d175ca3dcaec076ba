package com.valtech.cart.service;

import  org.hibernate.annotations.common.util.impl.*;
import org.springframework.beans.factory.annotation.Autowired;

import com.valtech.cart.entity.Cart;
import com.valtech.cart.repo.CartRepository;

public class CartServiceImplementation {
	
	@Autowired
	private CartRepository cartRepository;
	
	public Cart createCart(){
		logger.info("Creating a new cart");
		Cart cart=cartRepository.save(new Cart());
		logger.debug("Cart Successfully created "+cart);	
		return cart;
	}
	

}
